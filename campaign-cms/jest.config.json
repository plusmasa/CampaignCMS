{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/__tests__/**/*.js",
    "**/*.(test|spec).js"
  ],
  "collectCoverageFrom": [
    "backend/**/*.js",
    "!backend/server.js",
    "!backend/reset-db.js",
    "!backend/update-schedule-stop.js",
    "!backend/routes/campaign-workflow.js",
    "!backend/routes/channel-management.js",
    "!backend/routes/reports.js",
    "!backend/data/**",
    "!**/node_modules/**",
    "!**/coverage/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 60,
      "lines": 60,
      "statements": 60
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testTimeout": 10000
}
